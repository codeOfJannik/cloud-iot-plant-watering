{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": ["iot:Connect"],
      "Effect": "Allow",
      "Resource": "${arn}client/${clientId}"
    },
    {
      "Action": ["iot:Receive"],
      "Effect": "Allow",
      "Resource": "${arn}topic/bed/switch/water"
    },
    {
      "Action": ["iot:Subscribe"],
      "Effect": "Allow",
      "Resource": "${arn}topicfilter/bed/switch/water"
    }
  ]
}
